---
import projects from 'projects.json'
import Search from '@components/Search.astro'
import Card from './Card.astro'

interface Project {
    description: string,
    tags: string[]
    github?: string | boolean
    website?: string | boolean
}

---

<Search />
<ul class="grid md:grid-cols-2 gap-2 sm:p-6">
{ Object.entries(projects).map(([key, value]: [string, Project]) => {
    return <Card name={key} description={value.description} tags={value.tags} github={value.github ?? true} website={value.website ?? false}/>
}) }
</ul>