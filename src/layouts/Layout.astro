---
import FooterNav from '@components/FooterNav.astro'
import Logo from '@components/Logo.astro'
import PreviewNotice from '@components/PreviewNotice.astro'
import { Head, Header, Footer, HeadImgLinks, ThemeSwitch } from '@lameuler/ler-astro'
import '@lameuler/ler-astro/icon.css'

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<Head title={title} site="ler.quest">
		<HeadImgLinks rel="shortcut icon" href="/icons/favicon{size}.png" sizes={[32,48,96,128,144,192]} type="image/png"/>
	</Head>
	<body class="grid grid-rows-[auto_1fr_auto] min-h-full max-w-7xl mx-auto bg-slate-50 dark:bg-slate-900">
		<Header>
			<Logo/>
			<ThemeSwitch>
				<img slot="light" class="w-10 h-10 group-hover:drop-shadow-xl group-hover:scale-110 group-active:scale-105 transition-all" src="/icons/theme-light.png" width="40" height="40" srcset="/icons/theme-light-64.webp 64w, /icons/theme-light-128.webp 128w, /icons/theme-light-256.webp 256w" alt="" loading="lazy"/>
    			<img slot="dark" class="w-10 h-10 group-hover:drop-shadow-xl group-hover:scale-110 group-active:scale-105 transition-all" src="/icons/theme-dark.png" width="40" height="40" srcset="/icons/theme-dark-64.webp 64w, /icons/theme-dark-128.webp 128w, /icons/theme-dark-256.webp 256w" alt="" loading="lazy"/>
			</ThemeSwitch>
		</Header>
		<main class="w-full p-4">
			<slot />
		</main>
		<Footer>
			<FooterNav slot="left"/>
			<div slot="right" class="text-gray-600 dark:text-gray-300 opacity-80 p-0.5">
                Made with <a href="https://astro.build" class="underline">Astro</a>, <a href="https://svelte.dev" class="underline">Svelte</a> and <a href="https://tailwindcss.com" class="underline">Tailwind</a>.
                <a href="https://github.com/lameuler/lameuler.github.io" class="underline">View on GitHub</a>
            </div>
			<a slot="license" href="/license" class="underline">MIT License</a>
		</Footer>
		<PreviewNotice/>
	</body>
</html>
<style is:global>
	html {
		font-family: Lexend, sans-serif;
		height: 100%;
	}
	html.dark {
		color-scheme: dark;
	}
	body {
		background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 96 96' xmlns='http://www.w3.org/2000/svg'%3E%3Ccircle fill='%2364748b40' cx='48' cy='48' r='6'/%3E%3C/svg%3E");
		background-size: 1.5rem;
	}
	@font-face {
		font-family: 'Lexend';
		font-style: normal;
		font-weight: 100 900;
		font-display: swap;
		src: url(/lexend-latin.woff2) format('woff2');
		unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
	}
</style>
