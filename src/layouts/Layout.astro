---
import { Image } from 'astro:assets'
import FooterNav from '@/components/FooterNav.astro'
import Logo from '@/components/Logo.astro'
import { Head, Header, Footer, HeadImgLinks, ThemeSwitch } from '@lameuler/ler-astro'
import '@lameuler/ler-astro/icon.css'
import '../font.css'
import light from '@/assets/_light.png'
import dark from '@/assets/_dark.png'

interface Props {
	title: string;
	description: string;
}

const REPO = import.meta.env.GITHUB_REPOSITORY || 'lameuler/lameuler.github.io'
const SHA = import.meta.env.GITHUB_SHA || (import.meta.env.DEV ? 'dc67a12a747c976c684a5c0067a4b7a38af21fd0' : undefined)
---

<!doctype html>
<html lang="en">
	<Head {...Astro.props} site="ler.quest">
		<HeadImgLinks rel="shortcut icon" href="/icons/favicon{size}.png" sizes={[32,48,96,128,144,192]} type="image/png"/>
		<link rel="canonical" href={Astro.url.href}/>
	</Head>
	<body class="grid grid-rows-[auto_1fr_auto] min-h-full max-w-7xl mx-auto bg-slate-50 dark:bg-slate-900">
		<Header>
			<Logo/>
			<ThemeSwitch>
				<Image slot="light" class="w-10 h-10 group-hover:drop-shadow-xl group-hover:scale-110 group-active:scale-105 transition-all" src={light} width={40} height={40} densities={[1,2,3]} alt="" loading="eager"/>
				<Image slot="dark" class="w-10 h-10 group-hover:drop-shadow-xl group-hover:scale-110 group-active:scale-105 transition-all" src={dark} width={40} height={40} densities={[1,2,3]} alt="" loading="eager"/>
			</ThemeSwitch>
		</Header>
		<main class="w-full p-4">
			<slot />
		</main>
		<Footer>
			<FooterNav slot="left"/>
			<div slot="left" class="text-gray-600 dark:text-gray-300 opacity-80 px-2 py-0.5 mt-1">
                Made with <a href="https://astro.build" class="underline">Astro</a>, <a href="https://svelte.dev" class="underline">Svelte</a> and <a href="https://tailwindcss.com" class="underline">Tailwind</a>.
            </div>
			{ false && <div slot="right" class="text-gray-600 dark:text-gray-300 opacity-80 p-0.5 mt-auto">
				<a href={`https://github.com/${REPO}`} class="underline">View on GitHub</a>
				{ SHA &&
					<span>-</span> <a class="hover:underline" href={`https://github.com/${REPO}/commit/${SHA}`}><code>{ SHA.substring(0,7) }</code></a>
				}
			</div> }
			<a slot="license" href="/license" class="underline">MIT License</a>
		</Footer>
	</body>
</html>
<style is:global>
	html {
		height: 100%;
	}
	html.dark {
		color-scheme: dark;
	}
	body {
		background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 96 96' xmlns='http://www.w3.org/2000/svg'%3E%3Ccircle fill='%2364748b40' cx='48' cy='48' r='6'/%3E%3C/svg%3E");
		background-size: 1.5rem;
	}
</style>
